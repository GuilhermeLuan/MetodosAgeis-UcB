<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolBar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView_careleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/careleft"

                    app:layout_constraintStart_toStartOf="@+id/textView_toolbar"
                    app:layout_constraintEnd_toEndOf="@id/textView_toolbar"
                    app:layout_constraintTop_toTopOf="@id/textView_toolbar"
                    app:layout_constraintBottom_toBottomOf="@id/textView_toolbar"

                    />

                <TextView
                    android:id="@+id/textView_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up_header"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/green_dark"
                    android:paddingStart="120dp"
                    android:paddingEnd="120dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />


            </Toolbar>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView_pawsRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/paws"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/toolBar_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/animal_paws" />

    <View
        android:id="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/imageView_pawsRegister"
        android:layout_width="match_parent"
        android:layout_height="536dp"
        android:background="@drawable/container_components"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="88dp"/>

    <TextView
        android:id="@+id/text_nameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_label"
        android:layout_marginTop="24dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_nameRegister"
        app:layout_constraintStart_toStartOf="@id/editText_nameRegister"
        app:layout_constraintTop_toTopOf="@+id/containerComponents" />

    <EditText
        android:id="@+id/editText_nameRegister"
        style="@style/Edit_Text"
        android:hint="@string/name_placeholder"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/text_nameRegister"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_lastNameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lastname_label"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_nameRegister"
        app:layout_constraintStart_toStartOf="@id/editText_nameRegister"
        app:layout_constraintTop_toBottomOf="@+id/editText_nameRegister" />

    <EditText
        android:id="@+id/editText_lastNameRegister"
        style="@style/Edit_Text"
        android:hint="@string/lastname_placeholder"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/text_lastNameRegister"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_CPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpf_label"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_lastNameRegister"
        app:layout_constraintStart_toStartOf="@id/editText_lastNameRegister"
        app:layout_constraintTop_toBottomOf="@+id/editText_lastNameRegister" />

    <EditText
        android:id="@+id/editText_CPF"
        style="@style/Edit_Text"
        android:hint="@string/cpf_placeholder"
        android:inputType="number"
        android:maxLength="14"
        app:layout_constraintTop_toTopOf="@+id/text_CPF"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_Cellphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cellphone_label"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_CPF"
        app:layout_constraintStart_toStartOf="@id/editText_CPF"
        app:layout_constraintTop_toBottomOf="@+id/editText_CPF" />

    <EditText
        android:id="@+id/editText_Cellphone"
        style="@style/Edit_Text"
        android:hint="@string/cellphone_placeholder"
        android:inputType="phone"
        android:maxLength="15"
        app:layout_constraintTop_toTopOf="@+id/text_Cellphone"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_Cellphone"
        app:layout_constraintStart_toStartOf="@id/editText_Cellphone"
        app:layout_constraintTop_toBottomOf="@+id/editText_Cellphone" />

    <EditText
        android:id="@+id/editText_Email"
        style="@style/Edit_Text"
        android:hint="@string/email_placeholder"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="@+id/text_Email"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_Email"
        app:layout_constraintStart_toStartOf="@id/editText_Email"
        app:layout_constraintTop_toBottomOf="@+id/editText_Email" />

    <EditText
        android:id="@+id/editText_Password"
        style="@style/Edit_Text"
        android:hint="@string/password_placeholder"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/password_show"
        app:layout_constraintTop_toTopOf="@+id/text_Password"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_register"
        style="@style/Button"
        android:text="@string/sign_up"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        android:layout_marginTop="0dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>