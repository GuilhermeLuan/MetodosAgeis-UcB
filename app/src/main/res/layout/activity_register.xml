<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolBar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:titleTextAppearance="@font/montserrat_bold"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView_careleft"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:src="@drawable/careleft"
                    app:layout_constraintStart_toStartOf="@+id/textView_toolbar"
                    app:layout_constraintEnd_toEndOf="@id/textView_toolbar"
                    app:layout_constraintTop_toTopOf="@id/textView_toolbar"
                    app:layout_constraintBottom_toBottomOf="@id/textView_toolbar"

                    />

                <TextView
                    android:id="@+id/textView_toolbar"
                    android:layout_width="354dp"
                    android:layout_height="19.5sp"
                    android:text="Cadastro"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/green_dark"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />


            </Toolbar>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView_pawsRegister"
        android:layout_width="120dp"
        android:layout_height="81dp"
        android:src="@drawable/paws"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolBar_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="animal paws" />

    <View
        android:id="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/imageView_pawsRegister"
        android:layout_width="312dp"
        android:layout_height="536dp"
        android:background="@drawable/container_components"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/text_nameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_marginTop="24dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_nameRegister"
        app:layout_constraintStart_toStartOf="@id/editText_nameRegister"
        app:layout_constraintTop_toTopOf="@+id/containerComponents" />

    <EditText
        android:id="@+id/editText_nameRegister"
        style="@style/Edit_Text"
        android:hint="Seu nome"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/text_nameRegister"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_lastNameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobrenome"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_nameRegister"
        app:layout_constraintStart_toStartOf="@id/editText_nameRegister"
        app:layout_constraintTop_toBottomOf="@+id/editText_nameRegister" />

    <EditText
        android:id="@+id/editText_lastNameRegister"
        style="@style/Edit_Text"
        android:hint="Seu sobrenome"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/text_lastNameRegister"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_CPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_lastNameRegister"
        app:layout_constraintStart_toStartOf="@id/editText_lastNameRegister"
        app:layout_constraintTop_toBottomOf="@+id/editText_lastNameRegister" />

    <EditText
        android:id="@+id/editText_CPF"
        style="@style/Edit_Text"
        android:hint="Seu CPF"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@+id/text_CPF"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_Cellphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_CPF"
        app:layout_constraintStart_toStartOf="@id/editText_CPF"
        app:layout_constraintTop_toBottomOf="@+id/editText_CPF" />

    <EditText
        android:id="@+id/editText_Cellphone"
        style="@style/Edit_Text"
        android:hint="(00) 00000-0000"
        android:inputType="phone"
        app:layout_constraintTop_toTopOf="@+id/text_Cellphone"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_Cellphone"
        app:layout_constraintStart_toStartOf="@id/editText_Cellphone"
        app:layout_constraintTop_toBottomOf="@+id/editText_Cellphone" />

    <EditText
        android:id="@+id/editText_Email"
        style="@style/Edit_Text"
        android:hint="Seu email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="@+id/text_Email"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <TextView
        android:id="@+id/text_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:layout_marginTop="16dp"
        style="@style/Text_Register_Activity"
        app:layout_constraintRight_toLeftOf="@id/editText_Email"
        app:layout_constraintStart_toStartOf="@id/editText_Email"
        app:layout_constraintTop_toBottomOf="@+id/editText_Email" />

    <EditText
        android:id="@+id/editText_Password"
        style="@style/Edit_Text"
        android:hint="Sua senha"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@+id/text_Password"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:id="@+id/imageView_show_hide_pwd"
        android:layout_marginStart="210dp"
        app:layout_constraintStart_toStartOf="@+id/editText_Password"
        app:layout_constraintEnd_toEndOf="@id/editText_Password"
        app:layout_constraintTop_toTopOf="@id/editText_Password"
        app:layout_constraintBottom_toBottomOf="@id/editText_Password"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_register"
        style="@style/Button"
        android:text="Cadastrar"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        android:layout_marginTop="0dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>