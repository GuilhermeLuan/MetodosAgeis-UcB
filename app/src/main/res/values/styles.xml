<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">191dp</item>
        <item name="android:background">@drawable/container_componets</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="Edit_Text">
        <item name="android:layout_width">264dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">49dp</item>
        <item name="android:layout_marginRight">49dp</item>
    </style>

    <style name="Button_Back">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:top">1dp</item>
        <item name="android:background">@drawable/button_back</item>
    </style>
    
    <style name="Edit_text_subtitle">
        <item name="android:layout_width">264dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:labelTextSize">14dp</item>
        <item name="android:background">@drawable/edit_text_subtitle</item>
    </style>

    <style name="Edit_text_subtitle_2">
        <item name="android:layout_width">265dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/edit_text_subtitle</item>
    </style>

    <style name="Edit_text_subtitle_3">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@drawable/edit_text_subtitle</item>
        <item name="android:layout_marginTop">150dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">74dp</item>
        <item name="android:layout_marginRight">74dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="GoBackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/go_back_button_selector</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green_dark</item>
    </style>

</resources>